<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/global_view"
    tools:context=".ui.add_edit_product.view.activity.AddEditProductActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/save_product"
        android:layout_alignParentTop="true"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:padding="16dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/activity_add_edit_product_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/activity_add_edit_product_image_button_scan"
                android:layout_toStartOf="@+id/activity_add_edit_product_image_button_scan">

                <EditText
                    android:id="@+id/edit_text_name_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/activity_add_edit_product_edit_text_name"
                    android:inputType="textEmailAddress"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>

            <ImageButton
                android:id="@+id/activity_add_edit_product_image_button_scan"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/activity_add_edit_product_image_button_content_description_scan_sc"
                app:srcCompat="@drawable/ic_barcode" />

            <RelativeLayout
                android:id="@+id/activity_add_edit_product_block_image"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_below="@+id/activity_add_edit_product_header"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycleImages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>


            <TextView
                android:id="@+id/activity_add_edit_product_date_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_below="@id/activity_add_edit_product_block_image"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:text="@string/activity_add_edit_product_text_view_unfit_before"
                android:textSize="16sp" />

            <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                android:id="@+id/expiration_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_add_edit_product_date_header"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                app:mcv_selectionColor="@color/colorAccent"
                app:mcv_showOtherDates="all" />
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/save_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_ripple"
        android:text="@string/activity_add_edit_product_button_save_title"
        android:textColor="@android:color/white"
        android:textStyle="bold" />
</RelativeLayout>